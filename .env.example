# ==========================================
# ENVIRONMENT VARIABLES TEMPLATE
# ==========================================
# Copy this file to .env.development or .env.production
# Vite automatically loads the correct .env file based on mode

# API Configuration
# Development: http://localhost:8000/api
# Production: https://myrentstay.com/api
VITE_API_URL=http://localhost:8000/api
VITE_API_BASE_URL=http://localhost:8000

# Paystack Configuration
# Use test keys for development, live keys for production
# Get keys from: https://dashboard.paystack.com/#/settings/developers
VITE_PAYSTACK_PUBLIC_KEY=pk_test_your_test_public_key_here

# App Configuration
VITE_APP_NAME=RentStay
VITE_APP_URL=http://localhost:5173

# Environment
VITE_ENV=development
